{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/front/css/style.css') }}">
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('assets/front/js/main.js') }}" defer></script>
{% endblock %}
{% block body %}
    <header>
        <nav>
            <a href="{{ path('front_login') }}">connexion</a>
            <a href="{{ path('front_registration') }}">inscription</a>
            <form name="logout" action="{{ path('front_logout') }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                <button type="submit" class="q-btn-link">deconnexion</button>
                <a href="{{ path('front_profile_index') }}">profil</a>
            </form>
        </nav>
    </header>
    <main>
        {% block content %}{% endblock %}
    </main>
    <footer></footer>
{% endblock %}
