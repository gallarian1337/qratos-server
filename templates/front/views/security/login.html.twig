{% extends 'front/layout.html.twig' %}
{% block title 'connexion' %}
{% block content %}
    <h1 class="h3 mb-3 font-weight-normal">connexion</h1>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form method="post" novalidate>
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ logout_path() }}">Logout</a>
            </div>
        {% endif %}

        <div>
            <label for="identifier">Email</label>
            <input type="email" value="{{ lastUsername }}" name="identifier" id="identifier" class="form-control" autocomplete="email" required autofocus minlength="6" maxlength="180">
        </div>
        <div>
            <label for="password">mot de passe</label>
            <input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required maxlength="255">
        </div>
        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
        #}
        <button class="btn btn-lg btn-primary" type="submit">me connecter</button>
    </form>
{% endblock %}
